<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="720dp"
    android:layout_height="360dp"
    android:background="@android:color/transparent" >

    <LinearLayout
        android:id="@+id/select"
        android:layout_width="wrap_content"
        android:layout_height="260dp"
        android:layout_centerInParent="true"
        android:background="@drawable/kno_detail_path_bg_bottom" >

        <com.nd.pad.masterlearning.widget.numberpicker.NumberPicker
            android:id="@+id/level1"
            android:layout_width="@dimen/kno_path_text_width"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/kno_path_margin_middle"
            android:layout_marginRight="@dimen/kno_path_margin_side"
            android:layout_weight="1" />

        <com.nd.pad.masterlearning.widget.numberpicker.NumberPicker
            android:id="@+id/level2"
            android:layout_width="@dimen/kno_path_text_width"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/kno_path_margin_middle"
            android:layout_marginRight="@dimen/kno_path_margin_middle"
            android:layout_weight="1" />

        <com.nd.pad.masterlearning.widget.numberpicker.NumberPicker
            android:id="@+id/level3"
            android:layout_width="@dimen/kno_path_text_width"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/kno_path_margin_middle"
            android:layout_marginRight="@dimen/kno_path_margin_middle"
            android:layout_weight="1" />

        <com.nd.pad.masterlearning.widget.numberpicker.NumberPicker
            android:id="@+id/level4"
            android:layout_width="@dimen/kno_path_text_width"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/kno_path_margin_middle"
            android:layout_marginRight="@dimen/kno_path_margin_side"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/select"
        android:layout_alignLeft="@id/select"
        android:layout_alignRight="@id/select"
        android:background="@drawable/kno_detail_path_bg_top" >

        <TextView
            android:id="@+id/material"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="教材"
            android:textColor="@android:color/white"
            android:textSize="@dimen/kno_path_title_size" />

        <TextView
            android:id="@+id/outline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="章"
            android:textColor="@android:color/white"
            android:textSize="@dimen/kno_path_title_size" />

        <TextView
            android:id="@+id/suboutline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="节"
            android:textColor="@android:color/white"
            android:textSize="@dimen/kno_path_title_size" />

        <TextView
            android:id="@+id/kno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="知识点"
            android:textColor="@android:color/white"
            android:textSize="@dimen/kno_path_title_size" />
    </LinearLayout>

</RelativeLayout>